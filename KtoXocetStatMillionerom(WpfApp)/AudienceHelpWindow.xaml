                    <GradientStop Color="#FFB4B2B3" Offset="0.048"/>
                    <GradientStop Color="#FF84807F" Offset="0.179"/>
                    <GradientStop Color="#FF525051" Offset="0.078"/>
                    <GradientStop Color="#FF333333" Offset="0.837"/>
